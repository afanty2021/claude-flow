# Environment Configuration Template
# Copy to .env and fill in your actual values

# Application
NODE_ENV=development
PORT=3000
HOST=localhost
LOG_LEVEL=info

# Database
DATABASE_URL=sqlite:./data/claude-flow.db
DATABASE_POOL_SIZE=10

# Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
API_SECRET=your-api-secret-key
ENCRYPTION_KEY=your-32-character-encryption-key

# Claude Flow Configuration
AGENTDB_URL=http://localhost:8080
AGENTDB_API_KEY=your-agentdb-api-key
FLOW_NEXUS_URL=https://api.flow-nexus.ruv.io
FLOW_NEXUS_TOKEN=your-flow-nexus-token

# MCP Configuration
MCP_SERVER_URL=ws://localhost:8081
MCP_TIMEOUT=30000

# Memory Configuration
MEMORY_PROVIDER=agentdb
MEMORY_MAX_SIZE=10000
MEMORY_TTL=7200

# Feature Flags
ENABLE_CORS=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true
ENABLE_SWARM_COORDINATION=true
ENABLE_NEURAL_TRAINING=false

# Development
DEV_MODE=true
DEBUG_CLAUDE_FLOW=false
VERBOSE_LOGGING=false
HOT_RELOAD=true

# Testing
TEST_DATABASE_URL=sqlite:./data/test.db
TEST_REDIS_URL=redis://localhost:6379/1

# Performance
MAX_CONCURRENT_AGENTS=10
SWARM_TIMEOUT=60000
TASK_TIMEOUT=300000

# External Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key

# Monitoring
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# Logging
LOG_FORMAT=json
LOG_FILE=./logs/claude-flow.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5